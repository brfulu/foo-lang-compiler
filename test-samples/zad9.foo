import 'io';
import 'string';

int n = io.in.call();
str text = io.in.call();
str token = '';
str result = '';

loop
  .init(
    int i = 0;
  )
  .cond(i < text.len.call())
  .body(
    ++i;
    if
      .cond(string.isalpha.call(text[i]))
      .then(
        token += text[i];
      )
      .else(
        if
          .cond(token.len.call() > n)
          .then(
            token = string.upper.call(token);
          );
        
        result = result + token;
        token = '';
      );
  );

